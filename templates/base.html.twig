<!DOCTYPE html>
<html lang="{{ app.request.locale|default('fr') }}">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{% block title %}PartaJeux — Soirées jeux{% endblock %}</title>

  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
  <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

  <link rel="stylesheet" href="{{ asset('css/style.css') }}?v={{ 'now'|date('U') }}">
  {% block extra_head %}{% endblock %}
</head>
<body class="{% if app.request.cookies.get('theme') == 'light' %}light{% endif %}">
  <header>
    <div class="logo-area">
      <div class="logo">
        PJ
      </div>
      <div class="app-name">PartaJeux</div>
    </div>

    <div class="search-bar">
      <input type="text" id="searchInput" placeholder="Rechercher un jeu, une ville...">
    </div>

    <div class="header-right">
      <button class="toggle-btn" id="langToggle">FR</button>
      <button class="toggle-btn" id="themeToggle">☾</button>
      {% if app.user %}
      <a href="{{ path('app_logout') }}" class="btn-cyberpunk">Déconnexion</a>
      {% else %}
      <a href="{{ path('app_login') }}" class="btn-cyberpunk">S'inscrire / Se connecter</a>
      {% endif %}

    </div>
  </header>

  <main>
    {% block body %}{% endblock %}
  </main>

  {% for label, messages in app.flashes %}
    {% for message in messages %}
      <div class="flash-{{ label }}" style="margin:10px;padding:8px;border-radius:8px;background:rgba(255,255,255,0.1);">
        {{ message }}
      </div>
    {% endfor %}
  {% endfor %}


  <footer id="footer">
    © {{ "now"|date("Y") }} PartaJeux — Tous droits réservés | <a href="#" style="color:var(--neon-blue);text-decoration:none;">Mentions légales</a>
  </footer>

  {% block extra_scripts %}{% endblock %}
</body>
</html>
